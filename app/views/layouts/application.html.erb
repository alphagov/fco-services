<%# Using nested layouts: http://guides.rubyonrails.org/layouts_and_rendering.html#using-nested-layouts %>
<% content_for :page_title, "#{@transaction.title} - GOV.UK" %>
<% content_for :head do %>
  <!--[if gt IE 8]><!--><%= stylesheet_link_tag "application" %><!--<![endif]-->
  <!--[if IE 6]><%= stylesheet_link_tag "application-ie6" %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag "application-ie7" %><![endif]-->
  <!--[if IE 8]><%= stylesheet_link_tag "application-ie8" %><![endif]-->
  <%= stylesheet_link_tag "print", :media => "print" %>
<% end %>
<% content_for :body_classes, "mainstream" %>
<% content_for :content do %>
  <div id="wrapper" class="service" <%= data_journey %>>
    <%= yield %>
  </div>
<% end %>
<% content_for :body_end do %>
  <%= javascript_include_tag "application" %>
<% end %>
<%= render :template => 'layouts/govuk_template' %>
